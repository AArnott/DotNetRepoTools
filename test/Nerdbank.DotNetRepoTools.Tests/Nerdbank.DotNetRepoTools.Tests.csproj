<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net8.0;net9.0;net10.0</TargetFrameworks>
    <OutputType>Exe</OutputType>
    <RootNamespace />
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\src\Nerdbank.DotNetRepoTools\Nerdbank.DotNetRepoTools.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Build" ExcludeAssets="runtime" />
    <PackageReference Include="NuGet.Commands" PrivateAssets="compile" />
    <PackageReference Include="NuGet.Frameworks" PrivateAssets="compile" ExcludeAssets="runtime" />
    <PackageReference Include="System.CommandLine" />
    <PackageReference Include="System.Formats.Asn1" />
    <PackageReference Include="Xunit.Combinatorial" />
    <PackageReference Include="xunit.v3.mtp-v2" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="Assets\**" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Assets\**" LogicalName="$([System.String]::Copy('%(RelativeDir)').Replace('\','/'))%(Filename)%(Extension)" />
  </ItemGroup>

</Project>
